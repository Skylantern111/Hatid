<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/end"
    android:gravity="center"
    android:background="#ea5a75">

    <!-- Creative message -->
    <TextView
        android:id="@+id/arrivalMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Youâ€™ve arrived at your destination!"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Icon representing the arrival -->
    <ImageView
        android:id="@+id/arrivalIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_arrival"
        android:layout_marginBottom="16dp" />

    <!-- Optional: A thank you message -->
    <TextView
        android:id="@+id/thankYouMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for using our service!"
        android:textColor="#000000"
        android:textSize="14sp" />
</LinearLayout>
